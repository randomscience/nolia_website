---
import { footerMenu, legalMenu, footerAboutMenu, footerForUsersMenu, footerForProvidersMenu } from '@data/menu';
import Logo from '@components/Logo.astro';
import Button from '@components/ui/Button.astro';
import { siteConfig } from '@data/config';

interface ButtonProps {
  text: string;
  link: string;
  target?: string;
}

interface Props {
  footerCta?: {
    title: string;
    description: string;
    hideCta: boolean;
    button: ButtonProps;
  };
}

const { footerCta } = Astro.props;

  const defaultCta = {
  title: "Gotowy żeby być na bieżąco?",
  description: "Zapisz się do naszego newslettera, by otrzymywać najnowsze informacje o zajęciach i wydarzeniach.",
  hideCta: false,
  button: {
    text: "Subskrybuj newsletter",
    link: "/contact",
    target: "_self"
  }
 };

const cta = footerCta || defaultCta;
const currentYear = new Date().getFullYear();
---

<footer class={`bg-black text-white pb-small ${cta.hideCta ? 'pt-large' : ''}`}>
  <div class="site-container mx-auto px-4">
    {!cta.hideCta && (
      <div class="text-center border-b border-background-light mb-12 py-small">
        <h2 class="text-3xl font-bold mb-4" data-aos="fade-up">{cta.title}</h2>
        <p class="text-white mb-6 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
          {cta.description}
        </p>
        <Button 
          href={cta.button.link} 
          variant="ghostLight"
          size="lg"
          data-aos="fade-up"
          data-aos-delay="200"
          {...(cta.button.target && { target: cta.button.target })}
        >
          {cta.button.text}
        </Button>
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-5 gap-12 pb-12 border-b border-background-light">
      <!-- Logo i opis -->
      <div class="col-span-1">
        <Logo variant="footer" />
        <p class="mt-4 text-body-dark text-sm">
          {siteConfig.description}
        </p>
        <div class="mt-6 space-y-2 text-sm">
          <p><a href={`tel:${siteConfig.phone.replace(/\\s/g, '')}`} class="text-body-dark hover:text-white transition-colors">{siteConfig.phone}</a></p>
          <p><a href={`mailto:${siteConfig.contactEmail}`} class="text-body-dark hover:text-white transition-colors">{siteConfig.contactEmail}</a></p>
        </div>
      </div>
      
      <!-- O nas -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4">O nas</h3>
        <nav>
          <ul class="space-y-2">
            {footerAboutMenu.map(item => (
              <li><a href={item.link} class="text-body-dark hover:text-white transition-colors text-sm">{item.name}</a></li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Dla seniorów -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4">Dla seniorów</h3>
        <nav>
          <ul class="space-y-2">
            {footerForUsersMenu.map(item => (
              <li><a href={item.link} class="text-body-dark hover:text-white transition-colors text-sm">{item.name}</a></li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Dla partnerów -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4">Dla biznesu</h3>
        <nav>
          <ul class="space-y-2">
            {footerForProvidersMenu.map(item => (
              <li><a href={item.link} class="text-body-dark hover:text-white transition-colors text-sm">{item.name}</a></li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Aplikacja -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4">Aplikacja</h3>
        <nav>
          <ul class="space-y-2">
            {footerMenu.map(item => (
              <li><a href={item.link} class="text-body-dark hover:text-white transition-colors text-sm" target="_blank">{item.name}</a></li>
            ))}
          </ul>
        </nav>
      </div>
    </div>

    <!-- Informacje o firmie -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pb-8 border-b border-background-light text-sm">
      <div>
        <h4 class="font-semibold text-white mb-3">Dane firmy</h4>
        <div class="space-y-2 text-body-dark">
          <p><strong>Nazwa:</strong> {siteConfig.companyName} sp. z o.o.</p>
          <p><strong>NIP:</strong> {siteConfig.company.NIP}</p>
          <p><strong>KRS:</strong> {siteConfig.company.KRS}</p>
          <p><strong>REGON:</strong> {siteConfig.company.REGON}</p>
        </div>
      </div>
      <div>
        <h4 class="font-semibold text-white mb-3">Adres</h4>
        <p class="text-body-dark">{siteConfig.address}</p>
      </div>
    </div>

    <!-- Footer bottom -->
    <div class="mt-8 flex flex-col md:flex-row justify-between items-center">
      <div class="text-body-dark text-sm">
        © {currentYear} {siteConfig.companyName} sp. z o.o. Wszystkie prawa zastrzeżone.
      </div>
      
      <nav class="mt-4 md:mt-0">
        <ul class="flex flex-wrap gap-6">
          {legalMenu.map(item => (
            <li>
              <a 
                href={item.link} 
                class="text-sm text-body-dark hover:text-white transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</footer>