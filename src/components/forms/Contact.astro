---
import Button from "@components/ui/Button.astro";
import Input from "@components/ui/form/Input.astro";
---

<form
    action="https://buttondown.com/api/emails/embed-subscribe/nolia"
    method="post"
    class="space-y-6 bg-white p-6 rounded-lg embeddable-buttondown-form"
    referrerpolicy="unsafe-url"
>
    <div>
        <h3 class="text-lg font-semibold">Zostań w kontakcie</h3>
        <p class="text-sm text-body-base">Zapisz się na nasz newsletter i otrzymuj informacje o nowych zajęciach i aktualizacjach.</p>
    </div>

    <Input
        label="Adres e-mail"
        id="bd-email"
        name="email"
        type="email"
        placeholder="Twój adres e-mail"
        required
        background="light"
    />

    <div>
        <Button type="submit" variant="primary" size="lg">Subskrybuj</Button>
    </div>

    <p class="text-xs text-body-base text-center">
        <a href="https://buttondown.com/refer/nolia" target="_blank" class="text-primary hover:underline">Powered by Buttondown</a>
    </p>
</form>
